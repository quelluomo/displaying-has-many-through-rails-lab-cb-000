<h1><%= @doctor.name%></h1>
<h2>Department: <%= @doctor.department %></h2>

<ul>
<li><%= @doctor.appointments.each do |appointment| %>
  <%= appointment.appointment_datetime.strftime("%B %-d, %Y at %H:%M")%><%= link_to appointment.patient.name, patient_path(appointment.patient)%></li>
<%end%>

</ul>
